<div class="row">
  <div class="col-md-offset-3 col-md-9">
      <h2 class="text-center">Посты <%= @user.username%></h2>
  </div>
</div>
<% @user_posts.each do |post| %>
  <%= render partial: 'preview', locals: { post: post } %>
<% end %>

